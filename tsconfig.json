{
    "compilerOptions": {
        "noEmit": true,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "client/*": [ "./src/*" ],
            "@ff/browser/*": [ "node_modules/@framefactory/browser/src/*" ],
            "@ff/core/*": [ "node_modules/@framefactory/core/src/*" ],
            "@ff/ui/*": [ "node_modules/@framefactory/ui/src/*" ],
        }
    },
    "include": [
        "src/**/*"
    ]
}
